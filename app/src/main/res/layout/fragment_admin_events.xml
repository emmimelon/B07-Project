<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.events.admin_events.AdminEventsFragment"
    android:id="@+id/adminEventsFragment">

    <!-- FloatingActionButton for adding new events -->
    <TextView
        android:id="@+id/tvCreateEventGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/addEventButton"
        android:fontFamily="@font/amaranth"
        android:text="@string/admin_schedule_guide_text"
        android:textColor="@color/uoftTeal"
        android:textSize="26sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_below="@id/addEventButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/schedule_an_event_here_text"
        android:src="@android:drawable/ic_input_add" />

</RelativeLayout>